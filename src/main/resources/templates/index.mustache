{{>layout/header}}
    <h1>Notice</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/notice/save" role="button" class="btn btn-primary">Write</a>
            </div>
        </div>
        <br/>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>Author</th>
                <th>Modified</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#noticeList}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/notice/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/noticeList}}
            </tbody>
        </table>
    </div>
<div>{{#authMember}}{{name}}({{email}}) <a href="/logout">logout</a>{{/authMember}}</div>
{{>layout/footer}}
